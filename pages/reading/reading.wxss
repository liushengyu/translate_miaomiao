    border-radius: 10px;
    padding: 6px;
  }

  .menu-btn {
    padding: 10px 12px;
    min-width: 50px;
    height: 50px;
  }

  .btn-icon {
    font-size: 36rpx;
  }

  .btn-text {
    font-size: 18rpx;
  }
}

/* 调试信息样式 */
.debug-info {
