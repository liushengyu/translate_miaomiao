/* 翻译气泡样式 */
.translation-bubble-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  pointer-events: auto;
}

.translation-bubble {
  position: absolute;
  background: white;
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
  border: 1px solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  min-width: 180px;
  max-width: 280px;
  z-index: 1001;
  transform: translate(-50%, -100%);
  animation: bubbleShow 0.3s ease-out;
}

.bubble-arrow {
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 8px solid transparent;
  border-right: 8px solid transparent;
  border-top: 8px solid white;
}

.bubble-content {
  padding: 12px 16px;
}

.bubble-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.bubble-word {
  font-size: 16px;
  font-weight: 600;
  color: var(--primary-color);
}

.bubble-close {
  background: none;
  border: none;
  font-size: 18px;
  color: #999;
  padding: 0;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bubble-body {
  border-top: 1px solid #f0f0f0;
  padding-top: 8px;
}

.bubble-translation {
  font-size: 14px;
  color: var(--text-primary);
  line-height: 1.4;
}

@keyframes bubbleShow {
  from {
    opacity: 0;
    transform: translate(-50%, -100%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -100%) scale(1);
  }
}

/* 选择菜单样式 */
.selection-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.selection-menu {
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  animation: menuSlideIn 0.3s ease-out;
}

.menu-content {
  display: flex;
  flex-direction: row;
}

.menu-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  background: white;
  border: none;
  font-size: 28rpx;
  color: var(--text-primary);
  min-width: 120rpx;
  transition: background-color 0.2s;
}

.menu-btn:active {
  background: var(--background-secondary);
}

.menu-btn + .menu-btn {
  border-left: 1rpx solid var(--border-color);
}

.menu-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

@keyframes menuSlideIn {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 选中状态样式 */
.smart-word.selected {
  background: var(--primary-light);
  color: var(--primary-color);
  border-radius: 4rpx;
  padding: 2rpx 4rpx;
}
