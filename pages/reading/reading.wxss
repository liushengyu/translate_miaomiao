/* 阅读页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  padding: 12px;
  box-sizing: border-box;
  padding-top: env(safe-area-inset-top, 20rpx);
  padding-bottom: env(safe-area-inset-bottom, 40rpx);
}

.status-tip {
  background: rgba(255, 193, 7, 0.9);
  color: var(--warning-dark);
  padding: 8px 12px;
  margin-bottom: 12px;
  border-radius: var(--border-radius-md);
  backdrop-filter: blur(10px);
  text-align: center;
  border: 1px solid rgba(255, 193, 7, 0.3);
}

.status-text {
  font-size: 12px;
  font-weight: 500;
}

.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: var(--border-radius-lg);
  margin-bottom: 16px;
  padding: 16px;
  box-shadow: var(--shadow-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 24rpx;
  padding-bottom: 36rpx;
}

/* 输入区域样式 */
.input-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.text-input {
  width: 100%;
  min-height: 200rpx;
  max-height: 400rpx;
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 1.6;
  resize: none;
  box-sizing: border-box;
  background-color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  margin-bottom: 16rpx;
}

.text-input:focus {
  border-color: #5470c6;
  outline: none;
}

.text-input-section {
  margin-bottom: 12rpx;
}

.input-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  flex-wrap: wrap;
  gap: 8px;
}

.input-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
}

.reading-textarea {
  width: 100%;
  min-height: 200rpx;
  max-height: 400rpx;
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 1.6;
  resize: none;
  box-sizing: border-box;
  background-color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  min-height: 180rpx;
  max-height: 360rpx;
  margin-bottom: 16rpx;
}

.reading-textarea:focus {
  border-color: #5470c6;
  outline: none;
}

.input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12px;
  flex-wrap: wrap;
  gap: 8px;
  width: 100%;
}

.char-count {
  font-size: 12px;
  color: var(--text-tertiary);
  flex-shrink: 0;
}

.button-group {
  display: flex;
  gap: 8px;
  align-items: center;
  flex-wrap: wrap;
  flex-shrink: 0;
}

.test-btn {
  background: var(--primary-light);
  border: 1px solid var(--primary-color);
  color: var(--primary-color);
  font-size: 12px;
  padding: 6px 12px;
  border-radius: var(--border-radius-md);
  transition: all 0.2s ease;
}

.test-btn:active {
  background: var(--primary-color);
  color: white;
  transform: scale(0.95);
}

.process-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  border: none;
  padding: 10px 16px;
  border-radius: var(--border-radius-full);
  font-size: 14px;
  font-weight: bold;
  box-shadow: var(--shadow-md);
  transition: all 0.2s ease;
  white-space: nowrap;
  min-width: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
}

.process-btn:active {
  transform: translateY(1px);
  box-shadow: var(--shadow-sm);
}

.process-btn[disabled] {
  opacity: 0.6;
  background: var(--text-tertiary);
  box-shadow: none;
}

.btn-icon {
  font-size: 14px;
}

.reading-section {
  margin-bottom: 24rpx;
  margin-top: 0;
}

.reading-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  flex-wrap: wrap;
  gap: 8px;
}

.reading-title {
  font-size: 16px;
  font-weight: bold;
  color: var(--text-primary);
}

.reading-controls {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  align-items: center;
}

.control-btn {
  background: var(--background-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-full);
  padding: 8px 12px;
  font-size: 12px;
  color: var(--text-primary);
  transition: all 0.2s ease;
  white-space: nowrap;
  display: flex;
  align-items: center;
  gap: 4px;
  min-width: 80px;
  justify-content: center;
}

.control-btn:active {
  background: var(--border-color);
  transform: scale(0.95);
}

.play-all-btn {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: white;
  border-color: #28a745;
  font-weight: 600;
}

.play-all-btn:active {
  background: linear-gradient(135deg, #218838 0%, #1ea085 100%);
}

.stop-btn {
  background: var(--danger-color);
  color: white;
  border-color: var(--danger-color);
  font-weight: bold;
}

.stop-btn:active {
  background: var(--danger-dark);
  border-color: var(--danger-dark);
}

.pause-btn {
  background: var(--danger-color);
  color: white;
  border-color: var(--danger-color);
}

.reading-scroll {
  max-height: 200px;
  border-radius: var(--border-radius-md);
  background: var(--background-secondary);
}

.selectable-text-area {
  min-height: 100px;
  padding: 12px;
}

.reading-content {
  user-select: text;
  -webkit-user-select: text;
  padding-bottom: 20rpx;
  line-height: 1.8;
  font-size: 28rpx;
}

.reading-text {
  line-height: 2;
  font-size: 28rpx;
}

.word {
  display: inline-block;
  padding: 4rpx 6rpx;
  margin: 2rpx;
  border-radius: 6rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
  user-select: text;
  -webkit-user-select: text;
}

.word:active {
  background: #e3f2fd;
  border-color: #2196f3;
}

.word.selected {
  background: #e8f5e8;
  border-color: #4caf50;
  color: #2e7d32;
}

.word.playing {
  background: linear-gradient(45deg, #ffd54f, #ffeb3b);
  border-color: #ffc107;
  color: #f57f17;
  animation: wordPulse 1.5s infinite;
}

@keyframes wordPulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.text-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background: transparent;
}

.text-menu {
  position: absolute;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 25rpx;
  padding: 10rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  animation: menuFadeIn 0.3s ease-out;
}

@keyframes menuFadeIn {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.menu-item {
  display: flex;
  align-items: center;
  background: transparent;
  border: none;
  padding: 15rpx 20rpx;
  border-radius: 20rpx;
  color: white;
  font-size: 28rpx;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.menu-item:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.menu-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.menu-text {
  font-weight: 500;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20px;
  box-sizing: border-box;
}

.modal-content {
  background: white;
  border-radius: 16px;
  padding: 24px;
  max-width: 400px;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  position: relative;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    transform: scale(0.9) translateY(-20px);
    opacity: 0;
  }
  to {
    transform: scale(1) translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
  margin-right: 12px;
}

.modal-close {
  background: #f5f5f5;
  color: #6c757d;
  border: none;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.modal-close:active {
  background: #e9ecef;
  transform: scale(0.9);
}

.modal-body {
  text-align: left;
  line-height: 1.6;
}

.translation-content {
  margin-bottom: 20px;
}

.word-display {
  font-size: 20px;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12px;
  padding: 12px 16px;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12px;
  border-left: 4px solid #667eea;
}

.translation-text {
  font-size: 16px;
  color: #495057;
  margin-bottom: 16px;
  padding: 16px;
  background: #f8f9fa;
  border-radius: 8px;
  border: 1px solid #dee2e6;
}

.modal-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 600;
  transition: all 0.2s ease;
  white-space: nowrap;
  min-width: 80px;
}

.btn-primary:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
}

.btn-secondary {
  background: white;
  color: #667eea;
  border: 1px solid #667eea;
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 600;
  transition: all 0.2s ease;
  white-space: nowrap;
  min-width: 80px;
}

.btn-secondary:active {
  background: #667eea;
  color: white;
  transform: scale(0.95);
}

/* 响应式设计 - 模态框 */
@media (max-width: 480px) {
  .modal-overlay {
    padding: 16px;
  }

  .modal-content {
    padding: 20px;
    max-width: 100%;
    border-radius: 12px;
  }

  .modal-header {
    margin-bottom: 16px;
    padding-bottom: 12px;
  }

  .modal-title {
    font-size: 16px;
  }

  .modal-close {
    width: 28px;
    height: 28px;
    font-size: 14px;
  }

  .word-display {
    font-size: 18px;
    padding: 10px 12px;
    margin-bottom: 10px;
  }

  .translation-text {
    font-size: 15px;
    padding: 12px;
    margin-bottom: 12px;
  }

  .modal-actions {
    flex-direction: column;
    gap: 8px;
  }

  .btn-primary,
  .btn-secondary {
    width: 100%;
    padding: 12px 16px;
    font-size: 15px;
    min-width: auto;
  }
}

@media (max-width: 360px) {
  .modal-overlay {
    padding: 12px;
  }

  .modal-content {
    padding: 16px;
  }

  .modal-title {
    font-size: 15px;
  }

  .word-display {
    font-size: 16px;
  }

  .translation-text {
    font-size: 14px;
  }
}

/* 阅读容器 */
.reading-container {
  position: relative;
  user-select: text;
  -webkit-user-select: text;
}

/* 文本选择样式 */
.word.selected {
  background-color: #007AFF;
  color: white;
  border-radius: 4px;
  padding: 2px 4px;
  margin: 0 2px;
}

.word.playing {
  background-color: #FF9500;
  color: white;
  border-radius: 4px;
  padding: 2px 4px;
  margin: 0 2px;
  animation: pulse 1s infinite;
}

/* 改善的文本菜单样式 */
.text-menu {
  position: absolute;
  z-index: 1000;
  background-color: rgba(0, 0, 0, 0.9);
  border-radius: 12px;
  padding: 8px;
  opacity: 0;
  transform: scale(0.8) translateY(10px);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  pointer-events: none;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.text-menu.show {
  opacity: 1;
  transform: scale(1) translateY(0);
  pointer-events: auto;
}

.menu-content {
  display: flex;
  gap: 8px;
  align-items: center;
}

.menu-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12px 16px;
  background-color: transparent;
  border: none;
  border-radius: 8px;
  color: white;
  font-size: 24rpx;
  transition: all 0.2s ease;
  min-width: 60px;
  height: 60px;
}

.menu-btn:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.1);
}

.btn-icon {
  font-size: 40rpx;
  margin-bottom: 4px;
  line-height: 1;
}

.btn-text {
  font-size: 20rpx;
  opacity: 0.9;
  line-height: 1;
}

.translate-btn:hover, .translate-btn:active {
  background-color: rgba(0, 122, 255, 0.2);
}

.speak-btn:hover, .speak-btn:active {
  background-color: rgba(52, 199, 89, 0.2);
}

.favorite-btn:hover, .favorite-btn:active {
  background-color: rgba(255, 149, 0, 0.2);
}

.menu-arrow {
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 8px solid transparent;
  border-right: 8px solid transparent;
  border-top: 8px solid rgba(0, 0, 0, 0.9);
}

/* 播放状态指示 */
.play-status {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 12px 20px;
  border-radius: 25px;
  font-size: 28rpx;
  z-index: 100;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.play-progress {
  width: 200px;
  height: 4px;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 2px;
  margin-top: 8px;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #007AFF;
  border-radius: 2px;
  transition: width 0.3s ease;
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

/* 沉浸式阅读按钮样式 */
.btn-immersive {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 15rpx 30rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.btn-immersive::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.btn-immersive:hover::before {
  left: 100%;
}

.btn-immersive:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.4);
}

.btn-immersive:disabled {
  background: #d0d7de;
  color: #656d76;
  box-shadow: none;
  cursor: not-allowed;
}

.btn-immersive:disabled::before {
  display: none;
}

/* 改善的单词样式 */
.word {
  display: inline;
  padding: 4px 6px;
  margin: 2px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 32rpx;
  line-height: 1.6;
  user-select: text;
  -webkit-user-select: text;
}

.word:hover {
  background-color: rgba(0, 122, 255, 0.1);
}

.word:active {
  transform: scale(0.98);
}

