/* 欢迎横幅 - 恢复原始配色 */
.welcome-banner {
  background: linear-gradient(135deg, #1E88E5 0%, #1565C0 100%);
  border-radius: var(--border-radius-lg);
  padding: 24px;
  margin-bottom: 20px;
  color: white;
  box-shadow: var(--shadow-md);
}

.banner-content {
  display: flex;
  align-items: center;
}

.logo {
  width: 60px;
  height: 60px;
  margin-right: 16px;
  border-radius: var(--border-radius-md);
  background: rgba(255, 255, 255, 0.2);
}

.welcome-text .title {
  display: block;
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 4px;
}

.welcome-text .subtitle {
  display: block;
  font-size: 14px;
  opacity: 0.9;
}

/* 功能卡片 */
.features {
  margin-bottom: 20px;
}

.feature-card {
  background: var(--background-primary);
  border-radius: var(--border-radius-md);
  padding: 16px;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
  border: 1px solid var(--border-color);
}

.feature-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
  border-color: #1E88E5;
}

.feature-icon {
  width: 40px;
  height: 40px;
  background: var(--background-secondary);
  border-radius: var(--border-radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  font-size: 20px;
}

.feature-icon image {
  width: 24px;
  height: 24px;
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.feature-desc {
  display: block;
  font-size: 14px;
  color: var(--text-secondary);
}

.feature-arrow {
  font-size: 24px;
  color: var(--text-tertiary);
  font-weight: 300;
}

/* 统计卡片 - 调整边距 */
.stats-card {
  margin-bottom: 20px;
  padding: 16px;
}

.stats-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16px;
  display: block;
}

.stats-content {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 24px;
  font-weight: 700;
  color: #1E88E5;
  margin-bottom: 4px;
}

.stat-label {
  display: block;
  font-size: 14px;
  color: var(--text-secondary);
}

/* 历史记录卡片 - 调整边距和文本显示 */
.history-card {
  margin-bottom: 20px;
  padding: 16px;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.history-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.view-all {
  font-size: 14px;
  color: #1E88E5;
}

.history-list {
  margin-top: 0;
}

.history-item {
  padding: 12px 0;
  border-bottom: 1px solid var(--border-color);
}

.history-item:last-child {
  border-bottom: none;
}

/* 让文本显示更加低调，作为附属信息 */
.history-original {
  font-size: 14px;
  color: var(--text-secondary);
  margin-bottom: 6px;
  font-weight: 400;
  opacity: 0.8;
  line-height: 1.4;
}

.history-translated {
  font-size: 13px;
  color: var(--text-tertiary);
  margin-bottom: 6px;
  opacity: 0.7;
  line-height: 1.3;
}

.history-time {
  font-size: 12px;
  color: var(--text-tertiary);
  opacity: 0.6;
}

/* 小贴士卡片 */
.tips-card {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  border: 1px solid #FFB74D;
  padding: 16px;
  margin-bottom: 20px;
}

.tips-title {
  font-size: 16px;
  font-weight: 600;
  color: #E65100;
  margin-bottom: 8px;
  display: block;
}

.tips-text {
  font-size: 14px;
  color: #E65100;
  line-height: 1.6;
}

/* 通用flex布局辅助类 */
.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
